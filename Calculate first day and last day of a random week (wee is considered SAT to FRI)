SELECT DATEADD(DAY,-DATEPART(WEEKDAY,GETDATE()),CAST(GETDATE() AS DATE))
SELECT DATEADD(DAY,6-DATEPART(WEEKDAY,GETDATE()),CAST(GETDATE() AS DATE))

SELECT DATEADD(DAY,-DATEPART(WEEKDAY,DATEADD(MONTH,-2,GETDATE())),CAST(DATEADD(MONTH,-2,GETDATE()) AS DATE))
SELECT DATEADD(DAY,6-DATEPART(WEEKDAY,DATEADD(MONTH,-2,GETDATE())),CAST(DATEADD(MONTH,-2,GETDATE()) AS DATE))

SELECT DATEADD(DAY,-DATEPART(WEEKDAY,DATEADD(YEAR,-1,GETDATE())),CAST(DATEADD(YEAR,-1,GETDATE()) AS DATE))
SELECT DATEADD(DAY,6-DATEPART(WEEKDAY,DATEADD(YEAR,-1,GETDATE())),CAST(DATEADD(YEAR,-1,GETDATE()) AS DATE))
